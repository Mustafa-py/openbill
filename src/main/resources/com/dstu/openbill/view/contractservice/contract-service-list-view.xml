<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://contractServiceListView.title"
      focusComponent="contractServicesDataGrid">
    <data>
        <collection id="contractServicesDc"
                    class="com.dstu.openbill.entity.ContractService">
            <fetchPlan extends="_base">
                <property name="contract" fetchPlan="_base"/>
                <property name="service" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="contractServicesDl" readOnly="true">
                <query>
                    <![CDATA[select e from ContractService e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="contractServicesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="contractServicesDataGrid.create"/>
            <button id="editButton" action="contractServicesDataGrid.edit"/>
            <button id="removeButton" action="contractServicesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="contractServicesDl"/>
        </hbox>
        <dataGrid id="contractServicesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="contractServicesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="contract"/>
                <column property="service"/>
                <column property="startDate"/>
                <column property="endDate"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
